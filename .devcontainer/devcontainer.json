{
  "name": "Bajon Consulting Fullstack Dev",
  "dockerComposeFile": [
    "../Code/docker-compose.dev.yml"
  ],
  "service": "frontend",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "GitHub.copilot"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postStartCommand": "sh /workspace/.devcontainer/init-git.sh || true",
  "forwardPorts": [5173, 8080, 5432],
  "remoteUser": "vscode"
}
